#!/bin/bash
source /etc/shpkg.conf
source ~/.config/shpkg.conf

if (( $EUID == 0 )); then
    echo "running script as root"
    sudo /usr/local/share/repos/$1/si.sh
    exit
fi

if [[ -f "~/.local/share/repos/$1/ui.sh" ]]
then
    echo "running script"
    ~/.local/share/repos/$1/ui.sh
    exit
fi

if [[ -f "/usr/local/share/repos/$1/ui.sh" ]]
then
    echo "running script"
    /usr/local/share/repos/$1/ui.sh
    exit
fi

echo "shpkg-install can't find the installation scripts"
